<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resumen de tu Pedido</title>
  <style>
    body {
      font-family: Segoe UI, sans-serif;
      padding: 2rem;
      max-width: 600px;
      margin: auto;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.5rem;
    }
    td, th {
      border: 1px solid #ccc;
      padding: 0.5rem;
    }
    th { background: #f0f0f0; }
    button {
      background: #39b7b0;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Resumen de tu Pedido</h1>
  <table id="resumen">
    <thead>
      <tr><th>Producto</th><th>Cantidad</th></tr>
    </thead>
    <tbody></tbody>
  </table>
  <button id="confirmar">Confirmar pedido</button>

  <script>
    // 1. Leer parámetros de la URL
    const params = new URLSearchParams(window.location.search);
    const productos = {
      uva: 'Uva',
      durazno: 'Durazno',
      mandarina: 'Mandarina',
      sandia: 'Sandía',
      neutro: '0% Aroma/Color',
      carbon: 'Carbón Activado'
    };
    const cuerpo = [];

    // 2. Construir la tabla y el cuerpo del mailto
    const tbody = document.querySelector('#resumen tbody');
    for (let key in productos) {
      const qty = parseInt(params.get(key)) || 0;
      if (qty > 0) {
        // fila de tabla
        const tr = document.createElement('tr');
        tr.innerHTML = `<td>${productos[key]}</td><td>${qty}</td>`;
        tbody.appendChild(tr);
        // línea de mailto
        cuerpo.push(`${productos[key]}: ${qty}`);
      }
    }
    if (!tbody.hasChildNodes()) {
      tbody.innerHTML = '<tr><td colspan="2">No hay productos seleccionados.</td></tr>';
    }

    // 3. Confirmar pedido → mailto: y redirección
    document.getElementById('confirmar').onclick = () => {
      const asunto = encodeURIComponent('Nuevo pedido SorprendARTE');
      const body = encodeURIComponent('Resumen de pedido:\n' + cuerpo.join('\n'));
      // Abrir cliente de correo
      window.location.href = `mailto:sorprendarte01@gmail.com?subject=${asunto}&body=${body}`;
      // Tras 1s, ir a gracias.html
      setTimeout(() => {
        window.location.href = 'gracias.html?' + window.location.search.slice(1);
      }, 1000);
    };
  </script>
</body>
</html>
